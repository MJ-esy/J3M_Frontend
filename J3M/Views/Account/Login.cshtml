@model J3M.Shared.DTOs.Users.AuthDtos.LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="login-card card p-4 p-md-5">
        <h2 class="text-center mb-4">Log In</h2>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="EmailOrUserName" class="form-label">Email or Username</label>
                <input asp-for="EmailOrUserName" class="form-control" />
                <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn bgWhiteButton w-100 rounded-pill mt-3">Log In</button>
            <p class="text-sm-center mb-4"> <small>Don't have an account yet?</small></p>
            <a asp-controller="Account" asp-action="Register">Register here</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
