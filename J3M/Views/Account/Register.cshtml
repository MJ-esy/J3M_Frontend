@model J3M.Shared.DTOs.Users.AuthDtos.RegisterDto

@{
    ViewData["Title"] = "Create your J3M account";
}

@section MetaDescription {
    <meta name="description" content="Create your free J3M account to discover recipes, save favorites and build weekly meal plans tailored to your diet and ingredients." />
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="login-card card p-4 p-md-5">
        <h1 class="text-center mb-4">Create your J3M account</h1>

        <!-- Shows all ModelState errors -->
        <form asp-action="Register" method="post" novalidate aria-label="Create a new J3M account">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn bgWhiteButton w-100 rounded-pill mt-3">
                Create account
            </button>
            @* <a asp-controller="Register" asp-action="Register">Register now</a> *@
            <button type="submit" class="btn bgBlueButton w-100 rounded-pill mt-3">Register</button>
            <p class="text-sm-center mb-4"> <small>Are you already member?</small></p>
            <a asp-controller="Account" asp-action="Login">Log in here</a>
            

            <p class="text-sm-center mb-2 mt-4">
                <small>Already a member?</small>
            </p>
            <p class="text-sm-center mb-0">
                <a asp-controller="Account"
                   asp-action="Login"
                   class="link-primary">
                    Log in to your J3M account
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
