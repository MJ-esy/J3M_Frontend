@model J3M.Shared.MealPlanModels.WeeklyMealPlanDto
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-R5HVY9NXPV"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-R5HVY9NXPV');
    </script>
</head>
@{
    ViewData["Title"] = "Weekly Meal Plan";
}

<div class="container mt-4">
    <h2 class="text-center">Weekly Meal Plan 🍽️</h2>

    <!-- Form to trigger generation -->
    <form asp-action="GenerateWeeklyMenu" method="post" class="text-center mb-3">
        <input type="hidden" name="AllergyIds" value="0" />
        <input type="hidden" name="DietIds" value="0" />
        <button type="submit" class="btn btn-primary">Generate Weekly Menu</button>
    </form>

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-8">
                <h4>Weekly Menu</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Day</th>
                            <th>Meals</th>
                            <th>Summary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day in Model.DaySummaries)
                        {
                            <tr>
                                <td>@day.Day</td>
                                <td>
                                    @foreach (var meal in day.Meals)
                                    {
                                        <div><strong>@meal.MealType:</strong> @meal.Recipe.RecipeName</div>
                                    }
                                </td>
                                <td>@day.Summary</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!--Shopping List-->
            <div class="col-md-4">
                <h4>Shopping List 🛒</h4>
                <ul class="list-group">
                    @foreach (var item in Model.ShoppingList)
                    {
                        <li class="list-group-item">@item</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
