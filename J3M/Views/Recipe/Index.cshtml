
@model J3M.Models.RecipeViewModel

<!-- Page for Recipes -->
@{
    ViewData["Title"] = "Recipes";
}
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-R5HVY9NXPV"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-R5HVY9NXPV');
    </script>
</head>

<div class="container mt-4">
    <h2 class="text-center">Recipes 📖</h2>

    <div class="row">
        <!-- Left column: Filters -->
        <div class="col-md-3 border-end d-flex flex-column"
             style="position:sticky; top:1rem; height:100vh;">

            <form asp-action="FilterRecipes" method="post" id="recipeFilterForm" class="flex-grow-1 d-flex flex-column">
                <div class="flex-grow-1 overflow-auto pe-2">
                    <h5>Allergies 🚫</h5>
                    @foreach (var allergy in Model.Allergies)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="AllergyIds" value="@allergy.Id"
                                   @(allergy.IsSelected ? "checked" : "") />
                            <label class="form-check-label" for="allergy@allergy.Id">@allergy.Name</label>
                        </div>
                    }

                    <h5 class="mt-3">Diets 🥗</h5>
                    @foreach (var diet in Model.Diets)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="DietIds" value="@diet.Id"
                                   @(diet.IsSelected ? "checked" : "") />
                            <label class="form-check-label" for="diet@diet.Id">@diet.Name</label>
                        </div>
                    }
                </div>

                <!-- Pinned filter button -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100">Filter Recipes</button>
                </div>
            </form>

            <!-- Error + Spinner -->
            <div id="errorMessage" class="alert alert-danger mt-3" style="display:none;">
                Something went wrong. Please try again.
            </div>
            <div id="loadingSpinner" class="text-center mt-3" style="display:none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <!-- Right column: Recipes -->
        <div class="col-md-9">
            <div id="recipeContent">
                @if (Model.Recipes == null || !Model.Recipes.Any())
                {
                    <div class="alert alert-info mt-4">
                        No recipes found. Adjust your filters and try again.
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var recipe in Model.Recipes)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">@recipe.RecipeName</h5>
                                        <p class="card-text">@recipe.Description</p>

                                        <ul>
                                            @foreach (var ingredient in recipe.Ingredients)
                                            {
                                                <li>@ingredient</li>
                                            }
                                        </ul>

                                        @* @if (User.Identity.IsAuthenticated)
                                        {
                                            <form asp-action="ToggleFavorite" method="post">
                                                <input type="hidden" name="recipeId" value="@recipe.RecipeId" />
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    @(recipe.IsFavorite ? "Unfavorite" : "Favorite")
                                                </button>
                                            </form>
                                        } *@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $("#recipeFilterForm").submit(function (e) {
        e.preventDefault();
        $("#loadingSpinner").show();
        $("#errorMessage").hide();

        $.ajax({
            url: $(this).attr("action"),
            type: "POST",
            data: $(this).serialize(),
            success: function (result) {
                $("#recipeContent").html(result);
                $("#loadingSpinner").hide();
            },
            error: function (xhr) {
                $("#errorMessage").show();
                $("#loadingSpinner").hide();
                console.error("Error:", xhr.responseText);
            }
        });
    });
</script>

