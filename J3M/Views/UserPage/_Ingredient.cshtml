@model List<string>

<div class="card">
    <div class="card-header">
        <h4>My Ingredients</h4>
    </div>
    <div class="card-body">
        <form id="ingredientForm" method="post" asp-action="AddIngredient" asp-controller="UserPage">
            <div class="input-group mb-3">
                <input type="text" name="ingredient" class="form-control" placeholder="Enter ingredient" />
                <input type="hidden" name="currentIngredients" value="@string.Join(",", Model)" />
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </form>

        <ul class="list-group">
            @foreach (var ing in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @ing
                    <form method="post" asp-action="RemoveIngredient" asp-controller="UserPage" class="m-0">
                        <input type="hidden" name="ingredient" value="@ing" />
                        <input type="hidden" name="currentIngredients" value="@string.Join(",", Model)" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>
